#include <iostream>
#include <string>

class Student {
private:
    std::string name;
    int age;

public:
    // Constructor
    Student(const std::string& studentName, int studentAge) 
        : name(studentName), age(studentAge) {
        std::cout << "A student object has been created." << std::endl;
    }

    // Destructor
    ~Student() {
        std::cout << "A student object is being destroyed." << std::endl;
    }

    // Function to display student information
    void displayInfo() const {
        std::cout << "Student: " << name << ", Age: " << age << std::endl;
    }
};

int main() {
    // Creating a student object
    Student myStudent("John Doe", 20);

    // Displaying student information
    myStudent.displayInfo();

    return 0;
}
