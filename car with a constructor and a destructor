#include <iostream>
#include <string>

class Car {
private:
    std::string brand;
    std::string model;
    int year;

public:
    // Constructor
    Car(const std::string& carBrand, const std::string& carModel, int carYear) 
        : brand(carBrand), model(carModel), year(carYear) {
        std::cout << "A car object has been created." << std::endl;
    }

    // Destructor
    ~Car() {
        std::cout << "A car object is being destroyed." << std::endl;
    }

    // Function to display car information
    void displayInfo() const {
        std::cout << "Car: " << brand << " " << model << " (" << year << ")" << std::endl;
    }
};

int main() {
    // Creating a car object
    Car myCar("Toyota", "Corolla", 2022);

    // Displaying car information
    myCar.displayInfo();

    return 0;
}
