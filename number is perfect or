#include <iostream>
using namespace std;

int main() {
    int num, sum = 0;
    cout << "Enter a positive integer: ";
    cin >> num;

    // Find the sum of proper divisors
    for (int i = 1; i < num; ++i) {
        if (num % i == 0) {
            sum += i;
        }
    }

    // Check if the sum of proper divisors equals the number itself
    if (sum == num) {
        cout << num << " is a perfect number.";
    } else {
        cout << num << " is not a perfect number.";
    }

    return 0;
}
