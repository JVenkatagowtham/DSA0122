#include <iostream>
using namespace std;

int main() {
    int num, sum = 0, originalNum;

    cout << "Enter a positive integer: ";
    cin >> num;

    originalNum = num;

    // Find sum of digits
    while (num != 0) {
        int digit = num % 10;
        sum += digit;
        num /= 10;
    }

    // Check if num is Harshad
    if (originalNum % sum == 0)
        cout << originalNum << " is a Harshad number.";
    else
        cout << originalNum << " is not a Harshad number.";

    return 0;
}
